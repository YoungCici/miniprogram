<scroll-view>
  <view class="timu">{{index+1}}.{{postList[index].analysis}}</view>
</scroll-view>
<scroll-view style="height: 1000rpx; margin-top: 50rpx;">
  <button id='{{postList[index].answers[0].id}}' class="anniu" bindtap="btnOpClick" style="background-color: {{bcA}};">{{postList[index].answers[0].label}}.{{postList[index].answers[0].content}}</button>

  <button id='{{postList[index].answers[1].id}}' class="anniu" bindtap="btnOpClick" style="background-color: {{bcB}};">{{postList[index].answers[1].label}}.{{postList[index].answers[1].content}}</button>

  <button id='{{postList[index].answers[2].id}}' class="anniu" bindtap="btnOpClick" style="background-color: {{bcC}};">{{postList[index].answers[2].label}}.{{postList[index].answers[2].content}}</button>

  <button id='{{postList[index].answers[3].id}}' class="anniu" bindtap="btnOpClick" style="background-color: {{bcD}};">{{postList[index].answers[3].label}}.{{postList[index].answers[3].content}}</button>

  <button id='{{postList[index].answers[4].id}}' class="anniu" bindtap="btnOpClick" style="background-color: {{bcE}};">{{postList[index].answers[4].label}}.{{postList[index].answers[4].content}}</button>
</scroll-view>
<view class="huanti">
<button bindtap="lastQuestion">上一题</button>
<button bindtap="nextQuestion">下一题</button>
<button bindtap="xianshi">{{ny}}</button>
</view>
